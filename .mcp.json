{
    "mcpServers": {
        "delicius-menus": {
            "command": "./vendor/bin/sail",
            "args": [
                "artisan",
                "mcp:start",
                "menus"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest"
            ]
        },
        "laravel-boost": {
            "command": "vendor/bin/sail",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        }
    }
}